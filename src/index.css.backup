@import "tailwindcss";

/* ============================================
   VoltNest V3 - Desert Sunset Theme
   Tailwind CSS v4
   ============================================ */

@theme {
  /* Colors - Desert Sunset Palette */
  --color-sunset-50: #FFF7ED;
  --color-sunset-100: #FFEDD5;
  --color-sunset-200: #FED7AA;
  --color-sunset-300: #FDBA74;
  --color-sunset-400: #FB923C;
  --color-sunset-500: #F97316;
  --color-sunset-600: #EA580C;
  --color-sunset-700: #C2410C;
  --color-sunset-800: #9A3412;
  --color-sunset-900: #7C2D12;

  --color-sand-50: #FEFDFB;
  --color-sand-100: #FDF8F0;
  --color-sand-200: #F5EBD8;
  --color-sand-300: #E8D5B5;
  --color-sand-400: #D4B896;
  --color-sand-500: #BF9B6E;

  --color-night-50: #2A2A35;
  --color-night-100: #1F1F28;
  --color-night-200: #18181F;
  --color-night-300: #121217;
  --color-night-400: #0D0D11;
  --color-night-500: #08080A;

  --color-copper-400: #CD7F32;
  --color-copper-500: #B87333;
  --color-copper-600: #A66628;

  /* Fonts */
  --font-display: 'Syne', sans-serif;
  --font-body: 'Instrument Sans', sans-serif;
  --font-mono: 'JetBrains Mono', monospace;

  /* Animations */
  --animate-float: float 6s ease-in-out infinite;
  --animate-pulse-slow: pulse 4s cubic-bezier(0.4, 0, 0.6, 1) infinite;

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }
}

/* Base Styles */
* {
  border-color: var(--color-night-50);
}

body {
  font-family: var(--font-body);
  background-color: var(--color-night-500);
  color: var(--color-sand-100);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background-image:
    radial-gradient(ellipse 80% 50% at 50% -20%, rgba(249, 115, 22, 0.15), transparent),
    radial-gradient(ellipse 60% 40% at 100% 100%, rgba(205, 127, 50, 0.1), transparent);
}

::selection {
  background-color: rgba(249, 115, 22, 0.3);
  color: var(--color-sunset-100);
}

/* Custom Scrollbar */
::-webkit-scrollbar {
  width: 8px;
}

::-webkit-scrollbar-track {
  background-color: var(--color-night-400);
}

::-webkit-scrollbar-thumb {
  background-color: rgba(234, 88, 12, 0.5);
  border-radius: 9999px;
}

::-webkit-scrollbar-thumb:hover {
  background-color: var(--color-sunset-500);
}

/* Component Classes */
.text-gradient {
  background: linear-gradient(to right, var(--color-sunset-400), var(--color-sunset-300), var(--color-copper-400));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.text-gradient-warm {
  background: linear-gradient(to right, var(--color-sunset-200), var(--color-sunset-400), var(--color-sunset-600));
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.btn-primary {
  position: relative;
  overflow: hidden;
  background: linear-gradient(to right, var(--color-sunset-500), var(--color-sunset-600));
  color: white;
  font-family: var(--font-display);
  font-weight: 600;
  padding: 1rem 2rem;
  border-radius: 9999px;
  transition: all 0.3s;
}

.btn-primary:hover {
  box-shadow: 0 0 40px rgba(249, 115, 22, 0.4);
  transform: scale(1.05);
}

.btn-primary:active {
  transform: scale(0.95);
}

.btn-secondary {
  position: relative;
  border: 2px solid rgba(249, 115, 22, 0.5);
  color: var(--color-sunset-300);
  font-family: var(--font-display);
  font-weight: 600;
  padding: 1rem 2rem;
  border-radius: 9999px;
  transition: all 0.3s;
  backdrop-filter: blur(12px);
}

.btn-secondary:hover {
  background-color: rgba(249, 115, 22, 0.1);
  border-color: var(--color-sunset-400);
}

.glass-card {
  background-color: rgba(18, 18, 23, 0.4);
  backdrop-filter: blur(24px);
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: 1.5rem;
}

.glass-card-light {
  background-color: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(24px);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 1rem;
}

.section-padding {
  padding: 6rem 1.5rem;
}

@media (min-width: 768px) {
  .section-padding {
    padding: 8rem 3rem;
  }
}

@media (min-width: 1024px) {
  .section-padding {
    padding: 8rem 5rem;
  }
}

.noise-overlay {
  pointer-events: none;
  position: fixed;
  inset: 0;
  z-index: 50;
  opacity: 0.015;
  background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='1'/%3E%3C/svg%3E");
}

.glow-line {
  height: 1px;
  background: linear-gradient(to right, transparent, rgba(249, 115, 22, 0.5), transparent);
}

/* Animation Utilities */
.animate-in {
  animation: animateIn 0.5s ease forwards;
}

@keyframes animateIn {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.text-balance {
  text-wrap: balance;
}

/* Font Family Utilities */
.font-display {
  font-family: var(--font-display);
}

.font-body {
  font-family: var(--font-body);
}

.font-mono {
  font-family: var(--font-mono);
}
